{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "recording-command.schema.json",
  "title": "RecordingCommand",
  "type": "object",
  "properties": {
    "user": {
      "type": "string",
      "description": "Email of the employee initiating the command."
    },
    "action": {
      "type": "string",
      "enum": ["START", "STOP"],
      "description": "The action to perform."
    }
  },
  "required": ["user", "action"]
}
